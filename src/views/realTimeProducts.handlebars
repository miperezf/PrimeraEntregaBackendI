{{!< main}}
<h1>Productos en Tiempo Real</h1>
<ul id="product-list"></ul>
<script src="/socket.io/socket.io.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => { const socket = io();
  socket.on('products', (products) => { const productList =
  document.getElementById('product-list'); productList.innerHTML = '';
  products.forEach(product => { const li = document.createElement('li');
  li.textContent = `${product.title} - ${product.price}`;
  productList.appendChild(li); }); }); });
</script>