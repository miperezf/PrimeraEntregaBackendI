<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/realtimeProducts.js" defer></script>
  </head>
  <body>
    <h1>{{title}}</h1>

    <h2>Agregar Producto</h2>
    <form id="add-product-form">
      <form id="add-product-form">
        <input
          type="text"
          id="product-title"
          placeholder="Título del producto"
          required
        />
        <input
          type="number"
          id="product-price"
          placeholder="Precio del producto"
          step="0.01"
          required
        />
        <input
          type="text"
          id="product-description"
          placeholder="Descripción del producto"
          required
        />
        <input
          type="text"
          id="product-category"
          placeholder="Categoría del producto"
          required
        />
        <input
          type="number"
          id="product-stock"
          placeholder="Stock del producto"
          required
        />
        <input
          type="text"
          id="product-status"
          placeholder="Estado del producto"
          required
        />
        <button type="submit">Agregar Producto</button>
      </form>

    </form>

    <h2>Productos</h2>
    <ul id="products-list">
      {{#each products}}
        <li>
          <h3>{{title}}</h3>
          <p>{{description}}</p>
          <p>Price: ${{price}}</p>
          <p>Category: {{category}}</p>
          <p>Stock: {{stock}}</p>
        </li>
      {{/each}}
    </ul>
  </body>
</html>